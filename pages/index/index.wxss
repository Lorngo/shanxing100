/* pages/index/index.wxss */

page {
  background-color: #f7f7f7;
}


#search {
  width: 100%;
  height: 100%;
  padding-top: 30rpx;
  background-image: url('https://img.vrupup.com/web/wyl/shanxing100/index/index_bg_01.png');
  background-size: 100%;
  background-repeat: no-repeat;
}

#search .inp {
  width: 694rpx;
  height: 64rpx;
  margin: 0rpx auto;
  background-color: white;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
}

#search .inp view:nth-child(1) {
  width: 207rpx;
  height: 100%;
}

#search .inp .icon {
  width: 28rpx;
  height: 28rpx;
  background-image: url('https://img.vrupup.com/web/wyl/shanxing100/index/index_icon_04.png');
  background-size: cover;
  background-repeat: no-repeat;
}

#search .inp .txt {
  margin-left: 14rpx;
  flex: 1;
  height: 30rpx;
  font-size: 24rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #999999;
}

#search .search_plainput {
  font-size: 24rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  color: #999999;
}

#banner {
  width: 694rpx;
  height: 450rpx;
  margin: 28rpx auto;
}

#banner .swiper {
  width: 100%;
  height: 298rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: red;

}

.swiper image{
  width: 100% !important;
  height: 100% !important;
}

#go {
  width: 694rpx;
  height: 120rpx;
  background-color: gold;
  margin: 40rpx auto;
  background: url('https://img.vrupup.com/web/wyl/shanxing100/index/index_bg_02.png');
  background-size: cover;
  background-repeat: no-repeat;
}


#xmlist {
  width: 100vw;
  height: 100%;
  margin-top: 47rpx;
}

#xmlist .bigBox {
  width: 694rpx;
  height: 100%;
  margin: 0rpx auto;
}

#xmlist .bigBox .title {
  font-size: 32rpx;
  font-family: PingFang SC Bold, PingFang SC Bold-Bold;
  font-weight: 700;
  text-align: left;
  color: #333333;
}

#xmlist .bigBox .list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 26rpx;
}

#xmlist .bigBox .list .box {
  width: 100%;
  height: 210rpx;
  border-radius: 12rpx;
  background-color: white;
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

#xmlist .bigBox .list .box .left {
  width: 198rpx;
  height: 162rpx;
  background-color: red;
  border-radius: 10rpx;
  overflow: hidden;
}

#xmlist .bigBox .list .box .left image {
  width: 100% !important;
  height: 100% !important;
}

#xmlist .bigBox .list .box .right {
  height: 162rpx;
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-wrap: wrap;
}

#xmlist .bigBox .list .box .right .h3 {
  width: 100%;
  height: 29rpx;
  font-size: 30rpx;
  font-family: PingFang SC Bold, PingFang SC Bold-Bold;
  font-weight: 700;
  text-align: left;
  color: #333333;
}

#xmlist .bigBox .list .box .right .h4 {
  width: 100%;
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #999999;
  margin-top: 14rpx;
}

#xmlist .bigBox .list .box .right .but {
  margin-top: 14rpx;
  width: 214rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  background: #fff2e5;
  border-radius: 6rpx;
  font-size: 22rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  color: #ff9525;
}

#xmlist .bigBox .list .box .right .num {
  width: 100%;
  height: 21rpx;
  margin-top: 16rpx;
  display: flex;
}

#xmlist .bigBox .list .box .right .num view {
  font-size: 22rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #666666;
  height: 21rpx;
}

#xmlist .bigBox .list .box .right .num .rig {
  margin-left: 46rpx;
}

#xmlist .bigBox .list .box .right .num text {
  color: rgba(255, 149, 37, 1);
}

#xmlist .bigBox .list .box .right .num text {
  margin-left: -5rpx;
}




