.service_cont{
	width: 100%;
	height: 100vh;
	overflow: hidden;
}
.service_top{
	display: flex;
	justify-content: space-around;
	margin: 30rpx;
	box-sizing: border-box;
}
.gray_line{
	width: 100%;
	height: 20rpx;
	background-color: #F7F7F7;
}
.service_box{
	text-align: center;
}
.ser_icon{
	width: 84rpx;
	height: 84rpx;
}
.ser_text{
	font-size: 24rpx;
	font-weight: 700;
	color: #000000;
	margin-top: 10rpx;
}
.issue_list{
	padding: 48rpx 36rpx;
	height: 74%;
}
.issue_title{
	font-size: 32rpx;
	font-weight: 700;
	color: #333333;
	margin-bottom: 25rpx;
}
.issue_text{
	padding: 32rpx 0;
	border-bottom: 1px solid #EEEEEE;
}
.iss_title{
	font-size: 28rpx;
	font-weight: 500;
	color: #333333;
}
.iss_content{
	margin-top: 16rpx;
	font-size: 24rpx;
	font-weight: 500;
	color: #999999;
	line-height: 38rpx;
}
.rela_box{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,0.5);
	z-index: 999;
}
.phone_box{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	position: relative;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	width: 566rpx;
	height: 360rpx;
	background: #ffffff;
	border-radius: 20rpx;
	text-align: center;
}
.close_icon{
	position: absolute;
	top: 20rpx;
	right: 20rpx;
	width: 23rpx;
	height: 23rpx;
}
.phone_text{
	font-size: 36rpx;
	font-weight: 700;
	color: #040000;
	margin-top: 40rpx;
}
.call_btn{
	width: 400rpx;
	height: 76rpx;
	background: linear-gradient(#ffa524 0%, #ff9225 100%);
	border-radius: 38rpx;
	font-size: 28rpx;
	font-weight: 700;
	text-align: center;
	color: #ffffff;
	line-height: 76rpx;
	margin-top: 72rpx;
}