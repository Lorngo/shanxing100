.pro_content{
	width: 100%;
	height: 100vh;
	background-color: #F7F7F7;
	padding:0 28rpx;
}
.list_box{
  height: 100%;
	box-sizing: border-box;
}
.pro_box{
	/* height: 540rpx; */
	width: 694rpx;
	background: #ffffff;
	border-radius: 12rpx;
	padding: 20rpx 20rpx 28rpx;
	box-sizing: border-box;
	margin: 28rpx 0;
}
.pro_img{
	width: 100%;
	height: 300rpx;
	background-color: #6a6;
  border-radius: 10rpx;
}
.item_info{
	width: 75%;
}
.pro_name{
/* 	width: 75%; */
	font-size: 30epx;
	font-weight: 700;
	text-align: left;
	color: #333333;
  padding: 26rpx 0 17rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.pro_text{
	font-size: 24rpx;
	font-weight: 500;
	color: #999999;
}
.pro_item{
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 100%;
}
.item_btn{
	width: 156rpx;
	height: 62rpx;
	background: linear-gradient(#ffa524 0%, #ff9225 100%);
	border-radius: 30rpx;
	line-height: 60rpx;
	text-align: center;
	font-size: 28rpx;
	font-weight: 500;
	color: #ffffff;
	margin-top: 20rpx;
}
.nomore{
	font-size: 24rpx;
	text-align: center;
	margin-bottom: 10rpx;
	color: #999999;
}