/* pages/pages-list/group/group.wxss */
.page {
  width: 100vw;
}

.page .banner {
  width: 750rpx;
  height: 330rpx;
  background-color: red;
}

.page .banner .swiper {
  width: 100%;
  height: 100%;
}

.page .banner .swiper .img {
  width: 100%;
  height: 100%;
}

.page .banner .swiper .img img {
  width: 100%;
  height: 100%;
}

.page .group {
  width: 100%;
  height: 298rpx;
  position: relative;
  display: flex;
  justify-content: center;
}

.page .group .box {
  width: 694rpx;
  height: 220rpx;
  position: absolute;
  top: 30rpx;
  background: #fffdfa;
  border: 2rpx solid #ff9f24;
  border-radius: 10rpx;
}

.page .group .box .top {
  width: 100%;
  height: 62rpx;
  position: relative;
}

.page .group .box .top view {
  position: absolute;
  width: 100%;
  text-align: center;
  bottom: 0rpx;
  font-size: 32rpx;
  font-family: PingFang SC Bold, PingFang SC Bold-Bold;
  font-weight: 700;
  text-align: center;
  color: #333333;
}

.page .group .box .bottom {
  width: 100%;
  height: 158rpx;
  display: flex;
}

.page .group .box .bottom .left,
.right {
  flex: 1;
  position: relative;
}

.page .group .box .bottom .left .smallbox {
  width: 180rpx;
  height: 76rpx;
  position: absolute;
  left: 71rpx;
  bottom: 34rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.page .group .box .bottom .left .smallbox view {
  width: 100%;
  text-align: center;
}

.page .group .box .bottom .left .smallbox view:nth-child(1) {
  font-size: 36rpx;
  font-family: PingFang SC Heavy, PingFang SC Heavy-Heavy;
  font-weight: 800;
  color: #ff9525;
  height: 27rpx;
}

.page .group .box .bottom .left .smallbox view:nth-child(2) {
  font-size: 26rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: center;
  color: #333333;
  height: 25rpx;
}

.page .group .box .bottom .right .smallbox {
  width: 180rpx;
  height: 76rpx;
  position: absolute;
  right: 72rpx;
  bottom: 34rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.page .group .box .bottom .right .smallbox view {
  width: 100%;
  text-align: center;
}

.page .group .box .bottom .right .smallbox view:nth-child(1) {
  font-size: 36rpx;
  font-family: PingFang SC Heavy, PingFang SC Heavy-Heavy;
  font-weight: 800;
  color: #ff9525;
  height: 27rpx;
}

.page .group .box .bottom .right .smallbox view:nth-child(2) {
  font-size: 26rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: center;
  color: #333333;
  height: 25rpx;
}

.page .member {
  width: 694rpx;
  margin: 0rpx auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.page .member .title {
  height: 30rpx;
  width: 360rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page .member .title .h3 {
  font-size: 30rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: center;
  color: #333333;
}

.page .member .title view:nth-child(1) {
  width: 66rpx;
  height: 2rpx;
  background-color: rgba(210, 210, 210, 1);
  margin-right: 24rpx;
}

.page .member .title view:nth-child(3) {
  width: 66rpx;
  height: 2rpx;
  background-color: rgba(210, 210, 210, 1);
  margin-left: 24rpx;
}

.page  .scroll {
  
}

.page .member .list {
  display: flex;
  flex-wrap: wrap;
}

.page .member .list .box {
  width: 100%;
  height: 66rpx;
  padding-bottom: 31rpx;
  border-bottom: 1rpx solid rgba(238, 238, 238, 1);
  display: flex;
  margin-bottom: 33rpx;
  justify-content: space-between;
}

.page .member .list .box:nth-child(1){
  margin-top: 42rpx;
}

.page .member .list .box .left {
  width: 420rpx;
  height: 100%;
  display: flex;
}

.page .member .list .box .left .icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: orange;
}

.page .member .list .box .left .txt {
  flex: 1;
  height: 100%;
  margin-left: 23rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.page .member .list .box .left .txt .top {
  font-size: 28rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;
  height: 27rpx;
  display: flex;
  align-items: center;
}

.page .member .list .box .left .txt .top text {
  font-size: 22rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
    color: #666666;
  padding: 3rpx 10rpx;
  background-color: rgba(237, 237, 237, 1);
  border-radius: 6rpx;
  margin-left: 17rpx;
}

.page .member .list .box .left .txt .bottom {
  font-size: 24rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #999999;
  margin-top: 5rpx;
  height: 23rpx;
  margin-top: 16rpx;
}

.page .member .list .box .right{
  height: 100%;
  flex: 1;
  text-align: right;
  line-height: 66rpx;
  font-size: 28rpx;
font-family: PingFang SC Medium, PingFang SC Medium-Medium;
font-weight: 500;
color: #ff9525;
margin-top: 5rpx;
}

.page .member .list .box .noJoin{
 
  color: #666666 !important;
}