.rank_cont{
	padding: 0 28rpx 36rpx;
	margin-top: 35rpx;
	border-bottom: 20rpx solid #F7F7F7;
}
.rank_cont:last-child{
	border: none;
}
.rank_title{
	font-size: 30rpx;
	font-weight: 700;
	color: #333333;
}
.icon_top{
	display: inline-block;
	width: 6rpx;
	height: 22rpx;
	background: #ff9f24;
	border-radius: 3rpx;
	margin-right: 10rpx;
}
.rank_box{
	display: flex;
	align-items: center;
	flex-wrap: wrap;
}
.data_cont{
	width: 33%;
	text-align: center;
	margin-top: 44rpx;
}
.data_num{
	font-size: 52rpx;
	font-weight: 800;
	color: #333333;
	width: 100%;
	border-right: 1px solid #eee;
}
.data_cont:nth-child(3) .data_num{
	border: none;
}
.data_text{
	opacity: 0.8;
	font-size: 24rpx;
	font-weight: 500;
	color: #666666;
	margin-top: 32rpx;
	padding: 0 10rpx;
}