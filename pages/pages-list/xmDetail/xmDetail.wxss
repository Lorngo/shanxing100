/* pages/pages-list/xmDetail/xmDetail.wxss */
page{
  background-color: #F7F7F7;
}

.head{
  width: 100vw;
  height: 440rpx;
  background-color: white;
}

.head .head_img{
  width: 100%;
  height: 350rpx;
}

.head .head_img image{
  width: 100% !important;
  height: 100% !important;
}

.head .num{
  height: 88rpx;
  width: 100%;
}

.head .num .box{
  width: 683rpx;
  height: 100%;
  margin: 0rpx auto;
  display: flex;
  justify-content: space-between;
}

.head .num .box view{
  height: 100%;
  line-height: 88rpx;
  font-size: 28rpx;
font-family: PingFang SC Medium, PingFang SC Medium-Medium;
font-weight: 500;
text-align: left;
color: #333333;
}

.head .num .box view text{
  color: rgba(255,149,37,1);
  margin-left: -5rpx;
}

.txt{
  width: 710rpx;
  margin: 20rpx auto;
  font-size: 24rpx;
font-family: PingFang SC Medium, PingFang SC Medium-Medium;
font-weight: 500;
text-align: left;
color: #666666;
line-height: 38rpx;
}

.bottom{
  width: 100%;
  height: 168rpx;
  position: fixed;
  background-color: white;
  bottom: 0rpx;
  border-top: 1rpx solid rgba(238,238,238,1);
}

.bottom .top{
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 24rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: center;
  color: #ff9525;
}

.bottom .but{
  width: 100%;
  height: 75rpx;
}

.bottom .but .box{
  width: 660rpx;
  height: 74rpx;
  margin: 0rpx auto;
  display: flex;
  justify-content: space-between;
}

.bottom .but .box view{
  width: 306rpx;
  height: 100%;
  border-radius: 37rpx;
  font-size: 30rpx;
font-family: PingFang SC Bold, PingFang SC Bold-Bold;
font-weight: 700;
text-align: center;
color: #ff9525;
line-height: 74rpx;
}

.bottom .but .box view:nth-child(1){
  background-color: rgba(255,213,156,.4);
  color: rgba(255,149,37,1);
}

.bottom .but .box view:nth-child(2){
  background: linear-gradient(#ffa524 0%, #ff9225 100%);
  color: #ffffff;
}