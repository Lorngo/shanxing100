  height: 62rpx;
  background: #f7f7f7;
  border-radius: 7px;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.toast .box .list .check {
  width: 100%;
  height: 30rpx;
  display: flex;
  align-items: center;
  margin-top: 36rpx;
}

.toast .box .list .check .cir {
  box-sizing: border-box;
  width: 29rpx;
  height: 29rpx;
  border-radius: 50%;
  background: #eeeeee;
  border: 1rpx solid #dcdcdc;
}

.toast .box .list .check .checked{
  box-sizing: border-box;
  width: 30rpx;
height: 30rpx;
border-radius: 50%;
background: linear-gradient(#ffa524 0%, #ff9225 100%);
display: flex;
align-items: center;
justify-content: center;
border: 1rpx solid #ff9225;
}

.toast .box .list .check .checked:after{
  display: block;
  content: '';
  width: 12rpx;
height: 12rpx;
background: #ffffff;
border-radius: 50%;
}

.toast .box .list .check .text {
  margin-left: 19rpx;
  font-size: 26rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #666666;
}

.toast .box .list .check .text text {
  color: rgba(255, 151, 37, 1);
}

.toast .box .list .button {
  width: 100%;
