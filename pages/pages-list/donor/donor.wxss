.toast {
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0rpx;
}

.toast .box {
  width: 566rpx;
  height: 400rpx;
  background: #ffffff;
  border-radius: 20px;
  position: relative;
  display: flex;
  justify-content: center;
  transition: all .5s;
}

.toast .box .list {
  width: 474rpx;
  height: 100%;
  padding-top: 74rpx;
}

.toast .box .list .title {
  font-size: 30rpx;
