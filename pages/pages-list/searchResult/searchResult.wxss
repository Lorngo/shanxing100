/* pages/pages-list/searchResult/searchResult.wxss */
page{
  height: 100%;
  background-color: #F7F7F7;
}

.page {
  width: 100vw;
  height: 100%;
}

.head {
  width: 100vw;
  padding-top: 28rpx;
}

.head .inp {
  width: 694rpx;
  height: 64rpx;
  margin: 0rpx auto;
  background-color: white;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;

}

.head .inp view:nth-child(1) {
  width: 207rpx;
  height: 100%;
}

.head .inp .icon {
  width: 28rpx;
  height: 28rpx;
  background-image: url('https://img.vrupup.com/web/wyl/shanxing100/index/index_icon_04.png');
  background-size: cover;
  background-repeat: no-repeat;
}

.head .inp .search_inp {
  margin-left: 14rpx;
  flex: 1;
  height: 30rpx;
  font-size: 24rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #999999;
}

.head .search_plainput {
  font-size: 24rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  color: #999999;
}



