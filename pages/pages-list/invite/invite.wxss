/* pages/invite/invite.wxss */
page {
  background-color: #F7F7F7;
}

.page {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.hid {
  /* overflow: hidden; */
}

.head {
  width: 100vw;
  height: 340rpx;
  padding-top: 28rpx;
  background-color: white;
  position: relative;
  z-index: 100;
}

.head .inp {
  width: 694rpx;
  height: 64rpx;
  margin: 0rpx auto;
  background-color: #F7F7F7;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;

}

.head .inp view:nth-child(1) {
  width: 207rpx;
  height: 100%;
}

.head .inp .icon {
  width: 28rpx;
  height: 28rpx;
  background-image: url('https://img.vrupup.com/web/wyl/shanxing100/index/index_icon_04.png');
  background-size: cover;
  background-repeat: no-repeat;
}

.head .inp .search_inp {
  margin-left: 14rpx;
  flex: 1;
  height: 30rpx;
  font-size: 24rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #999999;
}

.head .search_plainput {
  font-size: 24rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  color: #999999;
}


.head .list {
  width: 694rpx;
  height: 134rpx;
  margin: 32rpx auto;
  display: flex;
  justify-content: space-between;
}

.head .list view {
  width: 214rpx;
  height: 134rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  font-size: 30rpx;
  font-family: PingFang SC Bold, PingFang SC Bold-Bold;
  font-weight: 700;
  text-align: center;
  color: #ffffff;
  letter-spacing: 2rpx;
  line-height: 134rpx;
}

.head .list view:nth-child(1) {
  background-image: url('https://img.vrupup.com/web/wyl/shanxing100/invite/inv_bg_03.png');
}

.head .list view:nth-child(2) {
  background-image: url('https://img.vrupup.com/web/wyl/shanxing100/invite/inv_bg_02.png');
}

.head .list view:nth-child(3) {
  background-image: url('https://img.vrupup.com/web/wyl/shanxing100/invite/inv_bg_01.png');
}

.page .grounpList {
  width: 100%;
  flex: 1;
}

.page .head .top {
  width: 100%;
  height: 90rpx;
  display: flex;
  margin: 0rpx auto;
  flex-wrap: wrap;
  background-color: #F7F7F7;
}


.page .head .top view {
  flex: 1;
  text-align: center;
  line-height: 78rpx;
  font-size: 26rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: center;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
}



.page .head .top text {
  display: inline-block;
  width: 0rpx;
  height: 0rpx;
  border-left: 9rpx solid transparent;
    border-right: 9rpx solid transparent;
    border-bottom: 10rpx solid rgba(153,153,153,1);
  /* background-image: url('https://img.vrupup.com/web/wyl/shanxing100/common/index_icon_01.png');
  background-size: 100%;
  background-repeat: no-repeat; */
  margin-left: 11rpx;
  transition: all .5s;
  transform-origin: center center;
}


.page .head .top .orangeIcon {
  /* background-image: url('https://img.vrupup.com/web/wyl/shanxing100/common/inv_icon_01.png') !important; */
  transform: rotate(180deg);
  border-left: 9rpx solid transparent;
  border-right: 9rpx solid transparent;
  border-bottom: 10rpx solid rgba(255,149,37,1);
}

.page .head .line {
  position: absolute;
  width: 100%;
  height: 14rpx;
  bottom: 0rpx;
  display: flex;
  justify-content: center;
  background-size: cover;
  background-repeat: no-repeat;
  z-index: 110;
  border-bottom: 1rpx solid rgba(220, 220, 220, 1);
}



.page .head .sxlist {
  width: 100%;
}





.page .head .screen {
  width: 100%;
  flex: 1;
  background: rgba(0, 0, 0, .5);
  z-index: 100;
  position: fixed;
  height: 100%;
  top: 368rpx;
  overflow: hidden;
  transition: all 2s;
}

.page .head .screen .sxlist {
  width: 100%;
  background-color: #F7F7F7;
  transition: all .5s;

}

.page .head .screen .hidden{
  transform: translateY(-300rpx);
   opacity: 0;
}

.page .head .screen .show{
  opacity: 1;
  transform: translateY(0rpx);
}

.page .head .screen .sxlist .box {
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  border-bottom: 1rpx solid #dcdcdc;
  font-size: 26rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: center;
  color: #333333;
  background-color: #F7F7F7;
}


.page .grounpList .scroll {
  width: 694rpx;
  height: 100%;

}


.page .head .screen .sxlist .check {
  color: #ff9525;

}






.grounpList {
  display: flex;
  flex-wrap: wrap;
  height: 100%;
  justify-content: center;
  padding-top: 20rpx;
}


::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  background-color: transparent;
}

.grounpList .box {
  width: 694rpx;
  height: 210rpx;
  border-radius: 12rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}



.grounpList .box .left {
  width: 198rpx;
  height: 168rpx;
  border-radius: 10rpx;
  background-color: red;
  margin-left: 24rpx;
  position: relative;
}

.grounpList .box .left  image{
  width: 100% !important;
  height: 100% !important;
}

.grounpList .box .left .icon {
  top: 0rpx;
  left: 0rpx;
  position: absolute;
  display: inline-block;
  padding: 6rpx 12rpx;
  background-color: #F6704C;
  border-radius: 10rpx 0rpx 10rpx 0rpx;
  font-size: 22rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
}

.grounpList .box .right {
  margin-left: 24rpx;
  flex: 1;
  height: 168rpx;
  position: relative;
}

.grounpList .box .right .h3 {
  font-size: 30rpx;
  font-family: PingFang SC Bold, PingFang SC Bold-Bold;
  font-weight: 700;
  text-align: left;
  color: #333333;
}

.grounpList .box .right .h4 {
  font-size: 24rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #999999;
  margin-top: 19rpx;
}

.grounpList .box .right .bot {
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 0rpx;
}

.grounpList .box .right .bot .lef {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.grounpList .box .right .bot .lef .h5 {
  font-size: 22rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #666666;
}

.grounpList .box .right .bot .lef .h5 .text {
  color: rgba(255, 149, 37, 1);
}

.grounpList .box .right .bot .rig {
  width: 184rpx;
  height: 62rpx;
  border-radius: 31rpx;
  background: linear-gradient(#ffa524 0%, #ff9225 100%);
  text-align: center;
  line-height: 62rpx;
  color: white;
  font-size: 28rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  color: #ffffff;
  margin-right: 22rpx;
}