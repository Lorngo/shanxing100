.donation_content{
	position: relative;
	width: 100%;
	height: 100vh;
	background-color: #F7F7F7;
	overflow: hidden;
}
/* 邀请列表 */
.donation_list{
	margin-top: 30rpx;
	height: 100%;
	padding-bottom: 28rpx;
	box-sizing: border-box;
}
.list_box{
	display: flex;
	align-items: center;
	width: 646rpx;
	height: 162rpx;
	background: #ffffff;
	border-radius: 12rpx;
	margin: 0 auto 30rpx;
	padding: 24rpx;
}
.list_img{
	position: relative;
	width: 198rpx;
	height: 162rpx;
	border-radius: 10rpx;
	overflow: hidden;
	flex: 1;
}

.list_data{
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	margin-left: 22rpx;
	flex: 2.1;
	width: 50%;
	height: 100%;
}
.list_name{
	width: 100%;
	font-size: 30rpx;
	font-weight: 700;
	color: #333333;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.money_num{
	font-size: 22rpx;
	font-weight: 500;
	color: #666666;
	margin-bottom: 12rpx;
}
.nomore{
	font-size: 24rpx;
	text-align: center;
	margin-bottom: 10rpx;
	color: #999999;
}