/* pages/pages-list/xmList/xmList.wxss */
page {
  background-color: #F7F7F7;
}

.page {
  width: 100vw;
  display: flex;
  justify-content: center;
}

.page .list {
  width: 694rpx;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 40rpx;
}

.page .list .box {
  width: 100%;
  height: 450rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-top: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page .list .box .detail{
  width: 654rpx;
  height: 403rpx;
}

.page .list .box .detail .img{
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: red;
}

.page .list .box .detail .img image{
  width: 100%;
  height: 100%;
}

.page .list .box .detail .bottom{
  width: 100%;
  height: 73rpx;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}

.page .list .box .detail .bottom .left{
  flex: 1;
  height: 100%;
}

.page .list .box .detail .bottom .left .h3{
  height: 30rpx;
  font-size: 30rpx;
font-family: PingFang SC Bold, PingFang SC Bold-Bold;
font-weight: 700;
text-align: left;
color: #333333;
}

.page .list .box .detail .bottom .left .time{
  font-size: 24rpx;
font-family: PingFang SC Medium, PingFang SC Medium-Medium;
font-weight: 500;
text-align: left;
color: #999999;
height: 20rpx;
margin-top: 23rpx;
}

.page .list .box .detail .bottom .right{
  flex: 1;
  height: 100%;
  display: flex;
  position: relative;
  align-items: center;
}

.page .list .box .detail .bottom .right .button{
  position: absolute;
  right: 0rpx;
  width: 156rpx;
  height: 60rpx;
  background: linear-gradient(#ffa524 0%, #ff9225 100%);
  border-radius: 30rpx;
  font-size: 28rpx;
font-family: PingFang SC Medium, PingFang SC Medium-Medium;
font-weight: 500;
text-align: center;
color: #ffffff;
line-height: 60rpx;
}