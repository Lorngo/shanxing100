page{
	background-color: rgba(247,247,247,1);
}

.pro_content{
	width: 694rpx;
	height: 100vh;
	background-color: #F7F7F7;
	margin: 0rpx auto;
}
.list_box{
  height: 100%;
	box-sizing: border-box;
}
.pro_box{
	/* height: 540rpx; */
	width: 694rpx;
	background: #ffffff;
	border-radius: 12rpx;
	padding: 20rpx 20rpx 28rpx;
	box-sizing: border-box;
	margin: 28rpx 0;
}
.pro_img{
	width: 100%;
	height: 300rpx;
	background-color: #6a6;
  border-radius: 10rpx;
}
.pro_name{
	width: 100%;
	font-size: 30epx;
	font-weight: 700;
	text-align: left;
	color: #333333;
  padding: 26rpx 0 17rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.pro_text{
	width: 100%;
	font-size: 24rpx;
	font-weight: 500;
	color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.pro_oper{
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 24rpx;
	font-weight: 500;
	color: #333333;
	margin-top: 28rpx;
}
.addBtn{
	display: flex;
	align-items: center;
}
.suba_icon{
	width: 26rpx;
	height: 26rpx;
}
.don_num{
	font-size: 24rpx;
	font-weight: 500;
	color: #333333;
	padding: 0 12rpx;
}
.money_num{
	font-size: 24rpx;
	font-weight: 500;
	color: #FF9425;
}
.donate_btn{
	width: 156rpx;
	height: 60rpx;
	background: linear-gradient(#ffa524 0%, #ff9225 100%);
	border-radius: 30rpx;
	font-size: 28rpx;
	font-weight: 500;
	text-align: center;
	line-height: 60rpx;
	color: #ffffff;
}
.nomore{
	font-size: 24rpx;
	text-align: center;
	margin-bottom: 10rpx;
	color: #999999;
}