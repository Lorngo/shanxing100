.invite_content{
	position: relative;
	width: 100%;
	height: 100vh;
	background-color: #F7F7F7;
	overflow: hidden;
}
.invite_head{
	position: relative;
	width: 100%;
	height: 220rpx;
}
.top_img{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}
.invite_box{
	display: flex;
	align-items: center;
	justify-content: space-around;
	position: absolute;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
	z-index: 99;
	width: 694rpx;
	height: 174rpx;
	background: #ffffff;
	border-radius: 16rpx;
}
.invite_data{
	text-align: center;
}
.data_num{
	font-size: 36rpx;
	font-weight: 800;
	color: #333333;
	margin-bottom: 14rpx;
}
.data_text{
	font-size: 26rpx;
	font-weight: 500;
	color: #999999;
}
/* 邀请列表 */
.invite_list{
	margin-top: 30rpx;
	height: 80%;
	margin-bottom: 20rpx;
	box-sizing: border-box;
}
.list_box{
	display: flex;
	align-items: center;
	width: 646rpx;
	height: 162rpx;
	background: #ffffff;
	border-radius: 12rpx;
	margin: 0 auto 30rpx;
	padding: 24rpx;
}
.list_img{
	position: relative;
	width: 198rpx;
	height: 162rpx;
	border-radius: 10rpx;
	overflow: hidden;
	flex: 1;
}
.tip_box{
	position: absolute;
	top: 0;
	left: 0;
	width: 92rpx;
	height: 42rpx;
	background-color: #F6704C;
	border-bottom-right-radius: 20rpx;
	text-align: center;
	line-height: 42rpx;
	font-size: 22rpx;
	font-weight: 500;
	color: #ffffff;
}
.list_data{
	margin-left: 22rpx;
	line-height: 45rpx;
	flex: 2.1;
	width: 50%;
}
.list_name{
	width: 100%;
	font-size: 30rpx;
	font-weight: 700;
	color: #333333;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.initia{
	font-size: 24rpx;
	font-weight: 500;
	color: #999999;
}
.list_money{
	display: flex;
	align-items: center;
}
.money_num{
	font-size: 22rpx;
	font-weight: 500;
	color: #666666;
}
.look_btn{
	width: 184rpx;
	height: 62rpx;
	background: linear-gradient(#ffa524 0%, #ff9225 100%);
	border-radius: 31rpx;
	font-size: 28rpx;
	font-weight: 500;
	text-align: center;
	color: #ffffff;
	line-height: 62rpx;
	margin-left: 30rpx;
}
.nomore{
	font-size: 24rpx;
	text-align: center;
	margin-bottom: 10rpx;
	color: #999999;
}