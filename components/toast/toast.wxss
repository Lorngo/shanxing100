/* components/toast.wxss */
.page {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .5);
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0rpx;
}

.toast {
  border-radius: 20rpx;
  background-color: white;
  position: relative;
  transition: all .5s;
  overflow: hidden;
 
}



.showToast {
  width: 566rpx;
  height: 364rpx;
  opacity: 1;
}

.toast .return {
  width: 23rpx;
  height: 23rpx;
  position: absolute;
  top: 16rpx;
  right: 20rpx;
  background-image: url('https://img.vrupup.com/web/wyl/shanxing100/common/close_btn.png');
  background-size: 100%;
  background-repeat: no-repeat;
}

.toast .h3{
  width: 100%;
  height: 28rpx;
  margin: 48rpx auto;
  text-align: center;
  font-size: 30rpx;
font-family: PingFang SC Bold, PingFang SC Bold-Bold;
font-weight: 700;
text-align: center;
color: #040000;
}

.toast .txt{
  width: 442rpx;
  height: 95rpx;
  margin: 29rpx auto;
  font-size: 24rpx;
font-family: PingFang SC Medium, PingFang SC Medium-Medium;
font-weight: 500;
text-align: center;
line-height: 36rpx;
color: #999999;
}

.toast .but{
  width: 448rpx;
  height: 70rpx;
  margin: 46rpx auto;
  display: flex;
  justify-content: space-between;
}


.toast .but .left{
  background: #ffeed7;
  color: #ff9525;
  width: 200rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 35px;
  font-size: 28rpx;
font-family: PingFang SC Bold, PingFang SC Bold-Bold;
font-weight: 700;
}

.toast .but .right{
  background: linear-gradient(#ffa524 0%, #ff9225 100%);
  color: #ffffff;
  width: 200rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 35px;
  font-size: 28rpx;
font-family: PingFang SC Bold, PingFang SC Bold-Bold;
font-weight: 700;
}

.toast .but2{
  width: 448rpx;
  height: 70rpx;
  margin: 46rpx auto;
  display: flex;
  justify-content: center;
}

.toast .but2 view{
  width: 400rpx;
  height: 76rpx;
  background: linear-gradient(#ffa524 0%, #ff9225 100%);
  border-radius: 38px;
  text-align: center;
  line-height: 76rpx;
  color: #ffffff;
}

.hidToast{
  width: 0rpx;
  height: 0rpx;
  opacity: 0;
}