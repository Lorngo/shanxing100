/* components/bigToast/bigTosat.wxss */

.toast {
  width: 100vw;
  height: 100vh;
  position: fixed;
  z-index: 999;
  background-color: rgba(0, 0, 0, .5);
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.toast .box {
  width: 628rpx;
  height: 996rpx;
  border-radius: 20rpx;
  background-color: white;
  position: relative;
  display: flex;
  justify-content: center;
  transition: all 3s;
}

.toast .box .return {
  position: absolute;
  width: 23rpx;
  height: 23rpx;
  right: 20rpx;
  top: 20rpx;
  background-image: url('https://img.vrupup.com/web/wyl/shanxing100/common/close_btn.png');
  background-size: 100%;
  background-repeat: no-repeat;
}

.toast .show{
  opacity: 1;
}

.toast .hidden{
  opacity: 0;
  width: 10rpx !important;
  height: 10rpx !important;
}

.toast .box .list {
  width: 554rpx;
  height: 960rpx;
  position: absolute;
  bottom: 0rpx;

}

.toast .box .list .title {
  width: 100%;
  height: 29rpx;
  font-size: 30rpx;
  font-family: PingFang SC Bold, PingFang SC Bold-Bold;
  font-weight: 700;
  text-align: center;
  color: #040000;
}

.toast .box .list .showname {
  margin-top: 35rpx;
  font-size: 28rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;
  letter-spacing: 1rpx;
}

.toast .box .list .showname .txt {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
}

.toast .box .list .inp {
  width: 554rpx;
  height: 76rpx;
  border-radius: 10px;
  border: 1px solid #e5e5e5;
  margin-top: 22rpx;
  display: flex;
  align-items: center;
}

.toast .box .list .inp .smallInput {
  margin-left: 10rpx;
}

.toast .box .hidname .icon {
  width: 30rpx;

  height: 30rpx;
  box-sizing: border-box;
  border-radius: 50%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 17rpx;
}

.toast .box .hidname .icon::after {
  content: '';
  display: block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: white;
}

.toast .box .hidname .checked {
  background: linear-gradient(#ffa524 0%, #ff9225 100%);
  border: 1rpx solid #FFA124;
}

.toast .box .hidname .noCheck {
  background-color: white !important;
  border: 1rpx solid #999 !important;
}

.toast .box .list .hidname {
  height: 30rpx;
  margin-top: 14rpx;
  font-size: 28rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;
  display: flex;
  align-items: center;
  margin-top: 14rpx;
}

.toast .box .list .box {
  width: 554rpx;
  height: 76rpx;
  border: 1px solid #e5e5e5;
  border-radius: 10px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.toast .box .list .ticket {
  margin-top: 44rpx;
}

.toast .box .list .box .head {
  width: 120rpx;
  height: 26rpx;
  margin-left: 25rpx;
  font-size: 28rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #666666;
  line-height: 26rpx;
  letter-spacing: 1rpx;
}

.toast .box .list .box .input {
  flex: 1;
  height: 100%;
  margin-left: 46rpx;
  display: flex;
  align-items: center;
}

.toast .box .list .box .input .smallInput {
  height: 30rpx;
  width: 100%;
  font-size: 28rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;

}

.toast .box .list .box .inputPla {
  font-size: 28rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;
}


.toast .box .list .num {
  margin-top: 30rpx;
}

.toast .box .list .txt {
  width: 100%;
  font-size: 24rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #ff9525;
  line-height: 38rpx;
  letter-spacing: 1rpx;
  margin-top: 30rpx;
}

.toast .box .list .button {
  width: 100%;
  height: 70rpx;
  margin-top: 35rpx;
  display: flex;
  justify-content: space-between;
}



.toast .box .list .button .left {
  background: #ffeed7;
  font-family: PingFang SC Bold, PingFang SC Bold-Bold;
  font-weight: 700;
  color: #ff9525;
  margin-left: 40rpx;
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 35px;
  font-size: 28rpx;
}

.toast .box .list .button .right {
  font-family: PingFang SC Bold, PingFang SC Bold-Bold;
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 35px;
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  background: linear-gradient(#ffa524 0%, #ff9225 100%);
  margin-right: 40rpx;
}